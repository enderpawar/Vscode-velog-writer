{
  "name": "velog-auto-writer",
  "displayName": "Velog Auto Writer",
  "version": "1.4.1",
  "description": "Git 커밋으로부터 Velog 블로그 글을 자동 생성하는 VSCode Extension",
  "publisher": "snowmile",
  "repository": {
    "type": "git",
    "url": "https://github.com/enderpawar/Vscode-velog-writer.git"
  },
  "bugs": {
    "url": "https://github.com/enderpawar/Vscode-velog-writer/issues"
  },
  "homepage": "https://github.com/enderpawar/Vscode-velog-writer#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "velog-auto-writer.generate",
        "title": "Velog: 블로그 글 생성하기"
      },
      {
        "command": "velog-auto-writer.setApiKey",
        "title": "Velog: Gemini API 키 설정"
      },
      {
        "command": "velog-auto-writer.viewStats",
        "title": "Velog: 커밋 통계 보기"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "velog-auto-writer",
          "title": "Velog Auto Writer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "velog-auto-writer": [
        {
          "type": "webview",
          "id": "velog-auto-writer.webview",
          "name": "블로그 글 생성"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "keywords": [
    "velog",
    "blog",
    "auto-writer",
    "git",
    "gemini",
    "vscode-extension"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
